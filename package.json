    "apollo-server": "2.15.1",
    "apollo-server-express": "^2.21.0",
    "aws-sdk": "^2.848.0",
    "bitpay-sdk": "^1.4.2102",
    "body-parser": "^1.19.0",
    "btcpay": "^0.2.4",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.3.3",
    "i": "^0.3.6",
    "node-schedule": "^2.0.0",
    "npm": "^7.5.4",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^2.5.0"
