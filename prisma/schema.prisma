generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id                Int                     @id @default(autoincrement())
  name              String                  @unique
  active            Boolean                 @default(true)
  description       String
  telegram          String?
  discord           String?
  email             String?
  payoutAddress     String?
  payoutCurrency    PayoutCurrency          @default(BTC)
  payInPlatform     Boolean                 @default(false)
  members           GroupMembership[]
  membershipOptions GroupMembershipOption[]
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @default(now())
}

model GroupMembership {
  id        Int              @id @default(autoincrement())
  memberId  Int
  groupId   Int
  active    Boolean          @default(false)
  role      MembershipRole   @default(MEMBER)
  status    MembershipStatus @default(PENDING)
  group     Group            @relation(fields: [groupId], references: [id])
  createdAt DateTime         @default(now())
  updatedAt DateTime         @default(now())

  @@unique([memberId, groupId], name: "GroupMembership_memberId_groupId_key")
}

model GroupMembershipOption {
  id               Int      @id @default(autoincrement())
  groupId          Int
  membershipFee    Float
  membershipLength Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
  group            Group    @relation(fields: [groupId], references: [id])
}

enum MembershipRole {
  ADMIN
  MEMBER
  TRADER
}

enum MembershipStatus {
  APPROVED
  DENIED
  PENDING
}

enum PayoutCurrency {
  BTC
  ETH
  LTC
}
